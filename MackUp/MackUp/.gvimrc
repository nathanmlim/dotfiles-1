set ch=2
set mousehide

if !exists("syntax_on")
  syntax on
endif

set hlsearch
set encoding=utf-8
if has('gui_macvim')
  set guifont=Monoid\ HalfTight:h12
  let g:airline_powerline_fonts = 1
endif

set lines=44 columns=132
set guioptions-=T
set cursorline

autocmd WinEnter * setlocal cursorline
autocmd WinLeave * setlocal nocursorline

set vb t_vb=

map <C-Tab> :tabnext<cr>
map <C-S-Tab> :tabprev<cr>
map <C-n> :tabnew<cr>

set background=dark
